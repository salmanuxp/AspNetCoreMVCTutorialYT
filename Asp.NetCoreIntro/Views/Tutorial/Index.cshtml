@model IEnumerable<Asp.NetCoreIntro.Models.Tutorial>

    <a class="text-light btn btn-primary mt-3" asp-area="" asp-controller="Tutorial" asp-action="CreateTutorial">Add New Tutorial</a>

<table class="table">
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Description</td>
    </tr>

    @foreach (var tutorial in Model)
    {
        <tr>
            <td>@tutorial.Id</td>
            <td>@tutorial.Name</td>
            <td>@tutorial.Description</td>
        </tr>

    }


</table>